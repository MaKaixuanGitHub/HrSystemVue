{
    "compilerOptions": {
        "strict": true,
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "src/**/*"
    ], // 包含的文件  
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ] // 排除的文件
}